{% extends 'base.html.twig' %}

{% block title %}
    {{ slug }}
{% endblock %}

{% block body %}
    <p class="h1">{{ category.name }}</p>

<div class="row">
    {% for product in category.products %}
<div class="col-3">
    <div class="card">
        <img src="{{ product.mainPicture }}" alt="" class="img-fluid">
        <div class="card-body">
            <h4 class="card-title">{{  product.name }} ({{ product.price / 100 }} &euro;)</h4>

            <span class="badge badge-info">
                        {{ product.category.name }}
                    </span>

            <p class="card-text">{{ product.shortDescription }}</p>
            <a href="#" class="btn btn-primary btn-sm" >Voir plus</a>
            <a href="#" class="btn btn-success btn-sm" >Ajouter </a>
        </div>
    </div>
</div>
    {% endfor %}
</div>
{% endblock %}