                <img src="{{ product.mainPicture }}" alt="" class="img-fluid">
                <div class="card-body">
                    <h4 class="card-title">{{  product.name }} ({{ product.price / 100 }} &euro;)</h4>

                    <span class="badge badge-info">
                        {{ product.category.name }}
                    </span>

                    <p class="card-text">{{ product.shortDescription }}</p>
                    <a href="{{ path('product_show', {'category_slug': product.category.slug,'slug': product.slug }) }}" class="btn btn-primary btn-sm" >Voir plus</a>
                    <a href="#" class="btn btn-success btn-sm" >Ajouter </a>
